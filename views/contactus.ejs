<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - Sherubtse Media Society</title>
    <link rel="stylesheet" href="/css/contactus.css">
</head>
<body>
          <!-- Header -->
  <header>
  <div class="logo-container">
      <img src="/images/logo1.png" alt="Sherubtse Media Society Logo" class="logo-img">
      <h1 class="site-title">Sherubtse Media Society</h1>
    </div>
  <button class="menu-toggle" aria-label="Toggle navigation">☰</button>
  <nav class="nav-links">
      <a href="/home">Home</a>
      <a href="/aboutus">About Us</a>
      <a href="/membership">Membership</a>
      <a href="/news">News</a>
      <a href="/contactus">Contact Us</a>
      <a href="/logout" class="logout">Logout</a>     
  </nav>
</header>

    <!-- Contact Section -->
<section class="contact-section">
  <div class="contact-container">
    <!-- Contact Form -->
    <div class="contact-form">
      <h2>Get in Touch</h2>
      <form action="#" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="6" required></textarea>
        </div>

        <button type="submit" class="submit-btn">SEND</button>
      </form>
    </div>

    <!-- Contact Info -->
    <div class="contact-info">
      <h3>Contact Information</h3>
      <div class="info-item">
        <span class="label">Address:</span>
        <span class="value">Kanglung</span>
      </div>
      <div class="info-item">
        <span class="label">Phone:</span>
        <span class="value">17582078</span>
      </div>
      <div class="info-item">
        <span class="label">Email:</span>
        <span class="value">Sherubtse.media@2024</span>
      </div>
    </div>
  </div>
</section>


    <footer class="footer">
  <div class="footer-container">
    <!-- Contact Us -->
    <div class="footer-column contact">
      <h4>Contact Us</h4>
      <p>Visit us at Sherubtse College, Bhutan</p>
      <p>Email:</p>
      <p>Phone: +975-17123456</p>
    </div>

    <!-- Follow Us -->
    <div class="footer-column follow">
      <h4>Follow Us</h4>
      <a href="https://www.facebook.com/SherubtseMediaSociety" target="_blank">
        <img src="/Images/facebook.png" alt="Facebook" class="social-icon">
      </a>
      <a href="https://www.tiktok.com/@smsuo875677?lang=en" target="_blank">
        <img src="/Images/tiktok.png" alt="TikTok" class="social-icon">
      </a>
      <a href="https://www.youtube.com/@SherubtseMediaSociety" target="_blank">
        <img src="/Images/youtube.png" alt="YouTube" class="social-icon youtube-icon">
      </a>
    </div>

    <!-- Quick Links -->
    <div class="footer-column links">
      <h4>Quick Links</h4>
      <p><a href="/aboutus">About Us</a></p>
      <p><a href="#">SMS Constitution</a></p>
      <p><a href="#">News</a></p>
    </div>
  </div>

  <div class="footer-bottom">
    © 2024 Sherubtse Media Society. All rights reserved.
  </div>
</footer>

    <script>
    const toggleButton = document.querySelector('.menu-toggle');
    const navLinks = document.querySelector('.nav-links');

    toggleButton.addEventListener('click', () => {
      navLinks.classList.toggle('show');
    });
  </script>
</body>
</html>