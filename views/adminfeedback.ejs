<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Feedback | Sherubtse Media Society</title>
  <link rel="stylesheet" href="/css/admin-feedback.css" />
</head>
<body>
  <div class="sidebar">
    <div>
      <div class="brand">
        <img src="/images/logo1.png" alt="Logo" class="logo" />
        <h2>Sherubtse<br/>Media Society</h2>
      </div>
      <h1>Admin Panel</h1>
      <nav>
        <ul>
          <li><a href="/adminnews">News</a></li>
          <li><a href="/admingallery">Gallery</a></li>
          <li><a href="/adminfeedback" class="active">Feedback</a></li>
          <li><a href="/adminmembership">Membership</a></li>
          
          
        </ul>
      </nav>
    </div>
    <a href="/admindashboard" class="logout-btn">Admin Dashboard</a>
  </div>

  <div class="main-content">
    <div class="top-bar">
      <h2>Feedback Management</h2>
    </div>

    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (feedbacks.length === 0) { %>
            <tr><td colspan="6">No feedback available.</td></tr>
          <% } %>

          <% feedbacks.forEach(feedback => { %>
            <tr>
              <td><%= feedback.id %></td>
              <td><%= feedback.name %></td>
              <td><%= feedback.email %></td>
              <td><%= feedback.message %></td>
              <td><%= feedback.createdAt.toLocaleString() %></td>
              <td>
                <form method="POST" action="/admin/feedback/delete/<%= feedback.id %>" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
